# Backend Server Configuration
PORT=3001

# Bitbucket API Configuration
# Get this from your Bitbucket App settings: https://bitbucket.org/account/settings/app-passwords/
# Required for authenticating with Bitbucket API to fetch PR diffs
BITBUCKET_APP_SECRET=your_bitbucket_app_secret_here

# OpenAI API Configuration
# Get this from: https://platform.openai.com/api-keys
# Required for generating PR descriptions using OpenAI's GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Development Environment
NODE_ENV=development