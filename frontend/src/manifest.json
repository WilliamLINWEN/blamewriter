{
  "manifest_version": 3,
  "name": "Bitbucket PR Helper (MVP)",
  "version": "0.1.0",
  "description": "Automatically generates PR descriptions for Bitbucket using AI",
  "permissions": ["activeTab", "storage", "identity"],
  "host_permissions": [
    "http://localhost:3001/*",
    "http://127.0.0.1:3001/*",
    "https://api.blamewriter.com/*",
    "https://*.blamewriter.com/*",
    "https://*.chromiumapp.org/*",
    "https://bitbucket.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bitbucket PR Helper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://bitbucket.org/*/pullrequests/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "options_page": "options/options.html",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "key": ""
}
